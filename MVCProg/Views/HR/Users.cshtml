@model List<MVCprog.Models.User>
@{
    Layout = "_Layout";
}

<h2>HR: Manage Users</h2>

<a href="@Url.Action("AddUser")" class="btn btn-success mb-3">Add New User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Hourly Rate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.HourlyRate</td>
                <td>
                    <a href="@Url.Action("EditUser", new { id = user.UserId })" class="btn btn-primary btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
